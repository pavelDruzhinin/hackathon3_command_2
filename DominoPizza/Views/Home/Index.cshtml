                                h5 = parseInt(- $(this).offset().top + $(this).find("p:last").offset().top + $(this).find("p:last").height()) + 25;
                                $(this).css({ "height": h5, "background-color": "white" });
                                sumh5 += h5 + 20;
                                $("#OnlineChatDialog").css({ "height": sumh5 });
                            });
