@{
    ViewBag.Title = "Dominos Pizza - Вакансии";
}

<style>
    .square2 {
        width: 300px;
        height: 300px;
        position: absolute;
        right: 200px;
</style>

<div class="square2">
    <div class="row" style="vertical-align:top">
        <h1 class="h1-ua">Хотите работать с нами?</h1>
        
        <div class="col-md-10">
            <h3 class="h3-ua">@Html.ActionLink("Перейти к оформлению резюме", "Feedback", "Home")</h3>
        </div>
        <div class="col-md-1 img-top-padding"><img src="~/img/Resume.png" alt="" width="60" /></div>
    </div>
</div>

<div class="body-content">
    <h1 class="h1-ua">Вакансии</h1>
     <div class="row" style="vertical-align:top">
        <div class="col-md-1 img-top-padding"><img src="~/img/Cook.png" alt="" width="60" /></div>
        <div class="col-md-10">
            <h3 class="h3-ua">@Html.ActionLink("Повар", "Cook", "Home")</h3>
        </div>
    </div>

    <div class="row" style="vertical-align:top">
        <div class="col-md-1 img-top-padding"><img src="~/img/Courier.png" alt="" width="60" /></div>
        <div class="col-md-10">
            <h3 class="h3-ua">@Html.ActionLink("Курьер", "Courier", "Home")</h3>
        </div>
    </div>

    <div class="row" style="vertical-align:top">
        <div class="col-md-1 img-top-padding"><img src="~/img/Manager.png" alt="" width="60" /></div>
        <div class="col-md-10">
            <h3 class="h3-ua">@Html.ActionLink("Менеджер", "Manager", "Home")</h3>
        </div>
    </div>
</div>