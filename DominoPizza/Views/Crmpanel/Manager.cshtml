@model IEnumerable<Task>
@using DominosPizza.Models

@{
    Layout = "~/Views/Crmpanel/_LayoutManager.cshtml";
    var db = new DominosContext();
}
<!-- start: sidebar -->
<aside id="sidebar-left" class="sidebar-left">

    <div class="sidebar-header">
        <div class="sidebar-title">
            Управление заказами
        </div>
        <div class="sidebar-toggle hidden-xs" data-toggle-class="sidebar-left-collapsed" data-target="html" data-fire-event="sidebar-left-toggle">
            <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
        </div>
    </div>

    <div class="nano">
        <div class="nano-content">
            <nav id="menu" class="nav-main" role="navigation">
                <ul class="nav nav-main">
                    <li class="nav-active">
                        <a href="~/Crmpanel/Manager">
                            <i class="fa fa-tasks" aria-hidden="true"></i>
                            <span>Заказы в работу</span>
                        </a>
                    </li>
                    <li>
                        <a href="~/Crmpanel/Manager">
                            <i class="fa fa-table" aria-hidden="true"></i>
                            <span>Добавить заказ</span>
                        </a>
                    </li>
                    <li>
                        <a href="~/Crmpanel/Manager">
                            <i class="fa fa-comment-o" aria-hidden="true"></i>
                            <span>Диалоги с покупателями</span><span class="badge">3</span>
                        </a>
                    </li>

                </ul>
            </nav>

            <hr class="separator" />
        </div>
    </div>
</aside>
<!-- start: Content -->
<!-- end: sidebar -->
<section role="main" class="content-body">
    <header class="page-header">
        <h2>Заказы в работе</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="~/Crmpanel/Manage">
                        <i class="fa fa-tasks"></i>
                    </a>
                </li>
                <li><span>Обработка заказов</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    <div class="row">
        <div class="center-sign">
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">Обработка заказов</h2>
                </header>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped mb-none">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Дата заказа</th>
                                    <th>ФИО</th>
                                    <th>Адрес доставки</th>
                                    <th>Сумма заказа</th>
                                    <th>Детали заказа</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    var customer = db.Customers.Find(item.TaskId);
                                    var customerAdress = db.Contacts.Find(item.TaskId);
                                    <!-- если заказ не завершен или не отменен, то вывести список текущих заказов -->
                                    <!--if (item.TaskStatus != null && item.TaskStatus == null)
                                    {-->
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.TaskId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TaskDate)</td>
                                        <td>@Html.DisplayFor(modelItem => customer.CustomerFullName())</td>
                                        <td>@Html.DisplayFor(modelItem => customerAdress.ContactAddress)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TaskTotalSum)</td>
                                        <td class="actions">
                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()
                                                <a href="~/Crmpanel/OrderDetails/@item.TaskId"><i class="fa fa-pencil"></i></a>
                                            }
                                        </td>
                                    </tr>
                                    <!--}-->
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>
<!-- end: page -->