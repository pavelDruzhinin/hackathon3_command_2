@model DominoPizza.Models.RegisterModel

@{
    ViewBag.Title = "Dominos Pizza | Регистрация сотрудника";
    Layout = "~/Views/Crmpanel/_LayoutManage.cshtml";
}
<!-- start: sidebar -->
<aside id="sidebar-left" class="sidebar-left">

    <div class="sidebar-header">
        <div class="sidebar-title">
            Управление пиццерией
        </div>
        <div class="sidebar-toggle hidden-xs" data-toggle-class="sidebar-left-collapsed" data-target="html" data-fire-event="sidebar-left-toggle">
            <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
        </div>
    </div>

    <div class="nano">
        <div class="nano-content">
            <nav id="menu" class="nav-main" role="navigation">
                <ul class="nav nav-main">
                    <li>
                        <!-- стиль предполагает активную вкладку -->
                        <a href="Manage">
                            <i class="fa fa-home" aria-hidden="true"></i>
                            <span>Общая статистика</span>
                        </a>
                    </li>
                    <li>
                        <a href="Active_Orders">
                            <i class="fa fa-tasks" aria-hidden="true"></i>
                            <span>Активные заказы</span>
                        </a>
                    </li>
                    <li class="nav-active">
                        <a href="Register">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <span>Добавить сотрудника</span>
                        </a>
                    </li>
                    <li>
                        <a href="Users">
                            <i class="fa fa-list-alt" aria-hidden="true"></i>
                            <span>Список сотрудников</span>
                        </a>
                    </li>
                    <li class="nav-parent">
                        <a>
                            <i class="fa fa-align-left" aria-hidden="true"></i>
                            <span>Редактор товаров</span>
                        </a>
                        <ul class="nav nav-children">
                            <li>
                                <a>Пиццы</a>
                            </li>
                            <li>
                                <a>Закуски</a>
                            </li>
                            <li class="nav-parent">
                                <a>Десерты</a>
                                <ul class="nav nav-children">
                                    <li>
                                        <a>Торты</a>
                                    </li>
                                    <li>
                                        <a>Печенье</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a>Напитки</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>

            <hr class="separator" />
        </div>

    </div>

</aside>
<!-- end: sidebar -->
<section role="main" class="content-body">
    <header class="page-header">
        <h2>Регистрация нового сотрудника</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="Register">
                        <i class="fa fa-user"></i>
                    </a>
                </li>
                <li><span>Регистрация сотрудника</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
    <!-- start: page -->
    <div class="center-sign col-sm-6">
        <div class="panel panel-sign">
            <div class="panel-body">
                <form>
                    <div class="form-group mb-lg">
                        <label>E-mail / Login</label>
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <span class="icon"><i class="fa fa-envelope"></i></span>
                            </span>
                            <input name="email" type="email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-lg">
                        <label>Фамилия</label>
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <span class="icon"><i class="fa fa-user"></i></span>
                            </span>
                            <input name="email" type="email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-lg">
                        <label>Имя</label>
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <span class="icon"><i class="fa fa-user"></i></span>
                            </span>
                            <input name="email" type="email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-lg">
                        <label>Отчество</label>
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <span class="icon"><i class="fa fa-user"></i></span>
                            </span>
                            <input name="email" type="email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-lg">
                        <label>Пол</label>
                        <div class="col-sm-12">
                            <div class="radio-custom radio-primary">
                                <span class="icon"><i class="fa fa-male"></i></span>
                                <input type="radio" id="Male" name="UserSex">
                                <label for="Male">Мужской</label>
                            </div>
                            <div class="radio-custom radio-primary">
                                <span class="icon"><i class="fa fa-female"></i></span>
                                <input type="radio" id="Female" name="UserSex">
                                <label for="Female">Женский</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-lg">
                        <label>Дата рождения</label>
                        <div class="col-md-6 input-group mb-md">
                            <span class="input-group-addon">
                                <span class="icon"><i class="fa fa-gift"></i></span>
                            </span>
                            <input id="date" data-plugin-masked-input data-input-mask="99/99/9999" placeholder="__/__/____" class="form-control">
                        </div>
                    </div>
                    <div class="form-group mb-lg">
                        <label>Номер телефона</label>
                        <div class="col-md-6 input-group mb-md">
                            <span class="input-group-addon">
                                <span class="icon"><i class="fa fa-phone"></i></span>
                            </span>
                            <input id="phone" data-plugin-masked-input data-input-mask="(999) 999-9999" placeholder="(123) 123-1234" class="form-control">
                        </div>
                    </div>
                    <div class="form-group mb-lg">
                        <label>Должность</label>
                        <div class="col-sm-12">
                            <div class="radio-custom radio-primary">
                                <span class="icon"><i class="fa fa-user-secret"></i></span>
                                <input type="radio" id="Administrator" name="UserRoles">
                                <label for="Administrator">Администратор</label>
                            </div>
                            <div class="radio-custom radio-primary">
                                <span class="icon"><i class="fa fa-user"></i></span>
                                <input type="radio" id="SalesManager" name="UserRoles">
                                <label for="SalesManager">Менеджер</label>
                            </div>
                            <div class="radio-custom radio-primary">
                                <span class="icon"><i class="fa fa-cutlery"></i></span>
                                <input type="radio" id="Cook" name="UserRoles">
                                <label for="Cook">Повар</label>
                            </div>
                            <div class="radio-custom radio-primary">
                                <span class="icon"><i class="fa fa-car"></i></span>
                                <input type="radio" id="Courier" name="UserRoles">
                                <label for="Courier">Курьер</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-lg">
                        <label>Пароль</label>
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <span class="icon"><i class="fa fa-key"></i></span>
                            </span>
                            <input name="email" type="email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-lg">
                        <label>Подтверждение пароля</label>
                        <div class="input-group mb-md">
                            <span class="input-group-addon">
                                <span class="icon"><i class="fa fa-key"></i></span>
                            </span>
                            <input name="email" type="email" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-7">
                    <button type="submit" class="btn btn-primary hidden-xs">Зарегистрировать</button>
                    <button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Зарегистрировать</button>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end: page -->
