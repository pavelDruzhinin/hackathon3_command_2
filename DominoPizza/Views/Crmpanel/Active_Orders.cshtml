@model IEnumerable<Task>
@using DominosPizza.Models

@{
    ViewBag.Title = "Dominos Pizza | Список заказов в работе";
    Layout = "~/Views/Crmpanel/_LayoutManage.cshtml";
    var db = new DominosContext();
}
<!-- start: sidebar -->
