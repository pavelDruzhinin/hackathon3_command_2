@{
    Layout = null;
}
<!doctype html>
<html class="fixed">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.css" />

    <link rel="stylesheet" href="~/Content/font-awesome.css" />
    <link rel="stylesheet" href="~/Content/magnific-popup.css" />
    <link rel="stylesheet" href="~/Content/datepicker3.css" />

    <!-- Specific Page Vendor CSS -->
    <link rel="stylesheet" href="~/Content/jquery-ui-1.10.4.custom.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-multiselect.css" />
    <link rel="stylesheet" href="~/Content/morris.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Content/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/Content/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/Content/theme-custom.css">

    <!-- Head Libs -->
    <script src="~/Scripts/modernizr.js"></script>
</head>
<body>
    <section class="body">
        <!-- start: header -->
        <header class="header">
            <div class="logo-container">
                <a href="~/Crmpanel/Manage" class="logo">
                    <h4>Dominos Pizza CRM</h4>
                </a>
                <div class="visible-xs toggle-sidebar-left" data-toggle-class="sidebar-left-opened" data-target="html" data-fire-event="sidebar-left-opened">
                    <i class="fa fa-bars" aria-label="Toggle sidebar"></i>
                </div>
            </div>
            <!-- start: search & user box -->
            @if (User.Identity.IsAuthenticated)
            {
                <div class="header-right">
                    <span class="separator"></span>

                    <div id="userbox" class="userbox">
                        <a href="#" data-toggle="dropdown">
                            <div class="profile-info">
                                <span class="name">@User.Identity.Name</span>
                                <span class="role">Администратор</span>
                            </div>

                            <i class="fa custom-caret"></i>
                        </a>

                        <div class="dropdown-menu">
                            <ul class="list-unstyled">
                                <li class="divider"></li>
                                <li>
                                    <a role="menuitem" tabindex="-1" href="~/Crmpanel/UserProfile"><i class="fa fa-user"></i> Профиль</a>
                                </li>
                                <li>
                                    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "logoutForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                    }
                                    <a role="menuitem" tabindex="-1" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-power-off"></i> Выход</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
            <!-- end: search & user box -->
        </header>
        <!-- end: header -->
        <!-- start: Content -->
        <div class="inner-wrapper">
            @RenderBody()
        </div>
        <!-- end: Content -->
        <aside id="sidebar-right" class="sidebar-right">
            <div class="nano">
                <div class="nano-content">
                    <a href="#" class="mobile-close visible-xs">
                        Свернуть <i class="fa fa-chevron-right"></i>
                    </a>

                    <div class="sidebar-right-wrapper">

                        <div class="sidebar-widget widget-calendar">
                            <h6>Календарь</h6>
                            <div data-plugin-datepicker data-plugin-skin="dark"></div>
                        </div>

                    </div>
                </div>
            </div>
        </aside>
    </section>

    <!-- Vendor -->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery.browser.mobile.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/nanoscroller.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/magnific-popup.js"></script>
    <script src="~/Scripts/jquery.placeholder.js"></script>
    <script src="~/Scripts/jquery.maskedinput.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/Scripts/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/Scripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/Scripts/theme.init.js"></script>


    <!-- Examples -->
    <script src="~/Scripts/examples.dashboard.js"></script>
</body>
</html>
